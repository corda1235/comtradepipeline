# File: .env.example

# API Keys
COMTRADE_API_KEY_PRIMARY=your_primary_key
COMTRADE_API_KEY_SECONDARY=your_secondary_key

# API Limits
API_DAILY_LIMIT=500
API_RECORD_LIMIT=100000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=comtrade_data
DB_USER=postgres
DB_PASSWORD=your_password

# Cache
CACHE_DIR=cache
CACHE_ENABLED=true
CACHE_TTL_DAYS=30

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_ROTATION_SIZE=100 MB
LOG_RETENTION_DAYS=30 days
LOG_COMPRESSION=zip
LOG_CONSOLE=true

# Monitoring
MONITORING_ENABLED=true
MONITORING_ALERTS_ENABLED=true
MONITORING_DAILY_REPORT=false

# SMTP for Alerts
SMTP_ENABLED=false
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=alerts@example.com
SMTP_TO=admin@example.com
SMTP_USE_TLS=true
